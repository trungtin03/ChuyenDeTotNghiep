@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-area mt-30">
    <div class="container">
        <div class="breadcrumb">
            <ul class="d-flex align-items-center">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li class="active">Đặt lại mật khẩu</li>
            </ul>
        </div>
    </div>
</div>

<div class="register-account ptb-100 ptb-sm-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="register-title">
                    <h3 class="mb-10">Đặt lại mật khẩu</h3>
                    <p>Vui lòng nhập mật khẩu mới của bạn.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { onsubmit = "return checkPass();" }))
                {
                    <input type="hidden" name="token" value="@ViewBag.Token" />
                    <span id="error-message" class="text-danger"></span>
                    <br />
                    <hr />
                    <fieldset>
                        <div class="form-group d-md-flex align-items-md-center">
                            <label class="control-label col-md-2">Mật khẩu mới</label>
                            <div class="col-md-10">
                                <input type="password" name="newPassword" required class="form-control" id="password" placeholder="Mật khẩu mới" />
                            </div>
                        </div>
                        <div class="form-group d-md-flex align-items-md-center">
                            <label class="control-label col-md-2">Xác nhận mật khẩu</label>
                            <div class="col-md-10">
                                <input type="password" name="confirmPassword" required class="form-control" id="confirmpassword" placeholder="Xác nhận mật khẩu" />
                            </div>
                        </div>
                    </fieldset>
                    <div class="terms">
                        <div class="float-md-right">
                            <input type="submit" value="Đặt lại mật khẩu" class="return-customer-btn" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function checkPass() {
        if (document.getElementById("password").value != document.getElementById("confirmpassword").value) {
            document.getElementById("error-message").innerHTML = "Mật khẩu không khớp";
            return false;
        }
        return true;
    }
</script>
