@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="breadcrumb-area mt-30">
    <div class="container">
        <div class="breadcrumb">
            <ul class="d-flex align-items-center">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li class="active">Quên mật khẩu</li>
            </ul>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Forgot Password Page Start -->
<div class="register-account ptb-100 ptb-sm-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="register-title">
                    <h3 class="mb-10">Khôi phục mật khẩu</h3>
                    <p>Nhập email của bạn để nhận liên kết đặt lại mật khẩu.</p>
                </div>
            </div>
        </div>

        @* THÔNG BÁO SAU FORM *@
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        <div class="row">
            <div class="col-sm-12">
                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
                {
                    @Html.ValidationMessage("ErrorForgot", new { @class = "text-danger" })

                    <fieldset>
                        <div class="form-group d-md-flex align-items-md-center">
                            <label class="control-label col-md-2">Email</label>
                            <div class="col-md-10">
                                <input type="email" name="email" required class="form-control" placeholder="Nhập email của bạn" />
                            </div>
                        </div>
                    </fieldset>
                    <div class="terms">
                        <div class="float-md-right">
                            <input type="submit" value="Gửi yêu cầu" class="return-customer-btn" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Forgot Password Page End -->
