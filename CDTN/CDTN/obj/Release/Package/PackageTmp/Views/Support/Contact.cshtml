@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="mb-3 breadcrumb">
                <a href="/" class="text-dark text-decoration-none">Trang chủ</a>
                <span class="mx-1">/</span>
                <span class="text-danger">Liên Hệ</span>
            </div>

            <div class="list-group shadow-sm rounded">
                <a href="#" class="list-group-item list-group-item-action active">
                    <i class="fa fa-phone me-2"></i> Liên hệ
                </a>
                <a href="@Url.Action("BuyGuide", "Support")" class="list-group-item list-group-item-action">
                    <i class="fa fa-shopping-cart me-2"></i> Hướng dẫn mua hàng
                </a>
                <a href="@Url.Action("SizeGuide", "Support")" class="list-group-item list-group-item-action">
                    <i class="fa fa-ruler me-2"></i> Hướng dẫn chọn size
                </a>
                <a href="@Url.Action("Policy", "Support")" class="list-group-item list-group-item-action">
                    <i class="fa fa-question-circle me-2"></i> Điều khoản & Chính sách
                </a>
                <a href="@Url.Action("Faq", "Support")" class="list-group-item list-group-item-action">
                    <i class="fa fa-question-circle me-2"></i> Câu hỏi thường gặp
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="p-5 bg-white rounded shadow-sm border">
                <h4 class="fw-bold mb-4 text-primary">Thông Tin Liên Hệ</h4>
                <ul class="list-unstyled mb-4 ps-3">
                    <li><strong>Gọi điện:</strong> 090.1800.888</li>
                    <li><strong>Email:</strong> cskh@truemart.vn</li>
                    <li><strong>Giờ làm việc:</strong> 07:30 - 22:30 (Tất cả các ngày)</li>
                </ul>

                <h4 class="fw-bold mb-4 text-primary">Phản Ánh - Khiếu Nại</h4>
                <form>
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Họ và tên *</label>
                            <input type="text" class="form-control rounded-3 shadow-sm" placeholder="Nhập họ và tên">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Số điện thoại *</label>
                            <input type="text" class="form-control rounded-3 shadow-sm" placeholder="Nhập số điện thoại">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Thông tin phản ánh *</label>
                        <div class="d-flex flex-wrap gap-2">
                            <button type="button" class="btn rounded-pill btn-warning-soft">Ứng Dụng</button>
                            <button type="button" class="btn rounded-pill btn-warning-soft">Thanh Toán</button>
                            <button type="button" class="btn rounded-pill btn-warning-soft">Đơn Hàng</button>
                            <button type="button" class="btn rounded-pill btn-warning-soft">Nhân Viên</button>
                            <button type="button" class="btn rounded-pill btn-warning-soft">Sản Phẩm</button>
                            <button type="button" class="btn rounded-pill btn-warning-soft">Khác</button>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Chi tiết phản ánh</label>
                        <textarea class="form-control rounded-3 shadow-sm" rows="4" placeholder="Vui lòng nhập nội dung..."></textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Đính kèm hình ảnh / video</label>
                        <div class="border rounded-3 p-4 text-center text-muted bg-light shadow-sm" style="cursor: pointer;">
                            <i class="fa fa-image fa-2x mb-2"></i>
                            <div>Chọn hoặc kéo thả ảnh/video tại đây</div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger px-4 py-2 rounded-3" disabled>Gửi phản ánh</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Required CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    body {
        background-color: #f9f9f9;
    }

    .breadcrumb span {
        font-weight: 500;
    }

    .list-group-item i {
        width: 20px;
        text-align: center;
    }

    .list-group-item.active {
        background-color: #fff0e9;
        border-color: #ffc2a6;
        color: #d94321;
        font-weight: bold;
    }

    .btn-warning-soft {
        background-color: #fff7e6;
        border: 1px solid #ffc107;
        color: #212529;
        transition: all 0.3s ease;
    }

        .btn-warning-soft:hover {
            background-color: #ffc107;
            color: white;
        }

    .form-label {
        font-size: 14px;
    }
</style>
